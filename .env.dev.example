# Celery Redis Service - Development Environment Configuration
# Copy to .env and fill with real values for development

# Environment Settings
ENVIRONMENT=development
DEBUG=true

# Redis Configuration - Single URL for all Redis needs
# The application will automatically derive Celery broker (db=0) and result backend (db=1) from this URL
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
API_WORKERS=4
API_KEY=dev-api-key-change-in-production

# Auto-Movie App Integration (Port 3010)
AUTO_MOVIE_APP_URL=http://localhost:3010
AUTO_MOVIE_API_URL=http://localhost:3010/api

# PayloadCMS Integration (via Auto-Movie App)
PAYLOAD_API_URL=http://localhost:3010/api
PAYLOAD_API_KEY=your_payload_api_key

# Webhook configuration for task completion callbacks
WEBHOOK_BASE_URL=http://localhost:3010/api/webhooks

# Cloudflare R2 Storage (Development - Optional)
R2_ENDPOINT=
R2_ACCESS_KEY=
R2_SECRET_KEY=
R2_BUCKET_NAME=ai-movie-assets-dev
R2_PUBLIC_URL=

# GPU Configuration (Development)
CUDA_VISIBLE_DEVICES=0
MAX_GPU_MEMORY_PER_TASK=4GB

# Task Configuration
MAX_RETRY_ATTEMPTS=3
TASK_TIMEOUT=1800  # 30 minutes for dev
QUEUE_MAX_SIZE=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=DEBUG

# Brain Service Integration
BRAIN_SERVICE_BASE_URL=http://localhost:8002
BRAIN_SERVICE_WS_URL=ws://localhost:8002/mcp
